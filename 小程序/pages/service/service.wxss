.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.banner {
  height: 400rpx;
  background: linear-gradient(135deg, #1890ff, #1d39c4);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  text-align: center;
  padding: 0 40rpx;
}

.banner-content {
  animation: fadeInUp 1s ease-out;
}

.banner-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

.banner-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

.advantages {
  display: flex;
  justify-content: space-around;
  padding: 40rpx;
  background: white;
  margin-top: -60rpx;
  margin-horizontal: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.advantage-item {
  text-align: center;
}

.advantage-value {
  margin-bottom: 10rpx;
}

.number {
  font-size: 40rpx;
  font-weight: bold;
  color: #1890ff;
}

.unit {
  font-size: 24rpx;
  color: #666;
  margin-left: 4rpx;
}

.advantage-title {
  font-size: 28rpx;
  color: #333;
}

.services {
  padding: 40rpx;
}

.service-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.05);
  transform: translateY(0);
  transition: all 0.3s ease;
}

.service-card:hover {
  transform: translateY(-10rpx);
  box-shadow: 0 8rpx 30rpx rgba(0,0,0,0.1);
}

.service-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.service-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.service-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.service-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
  line-height: 1.6;
}

.service-details {
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 10rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.detail-dot {
  color: #1890ff;
  margin-right: 10rpx;
}

.detail-text {
  font-size: 26rpx;
  color: #333;
}

.contact-section {
  background: linear-gradient(135deg, #1890ff, #1d39c4);
  padding: 60rpx 40rpx;
  text-align: center;
  color: white;
}

.contact-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

.contact-desc {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 40rpx;
  display: block;
}

.contact-btn {
  background: white;
  color: #1890ff;
  font-weight: bold;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  display: inline-block;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}