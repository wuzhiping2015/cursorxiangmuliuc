.container {
  min-height: 100vh;
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #F5F7FA;
}

.section-header {
  margin-bottom: 30rpx;
}

.section-header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 数据分析 */
.stats-grid {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 数据概览卡片 */
.stats-overview {
  margin-bottom: 30rpx;
  border-radius: 20rpx;
  background-color: #fff;
  padding: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.overview-header {
  margin-bottom: 20rpx;
}

.overview-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
}

.data-section {
  height: 320rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.completion-chart {
  width: 100%;
  height: 100%;
}

/* 习惯完成趋势 */
.habits-trends {
  margin-bottom: 30rpx;
  border-radius: 20rpx;
  background-color: #fff;
  padding: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.trends-header {
  margin-bottom: 20rpx;
}

.trends-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
  display: block;
}

.trends-legend {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666666;
}

.legend-color {
  width: 24rpx;
  height: 12rpx;
  border-radius: 6rpx;
  margin-right: 8rpx;
}

.trends-chart {
  height: 320rpx;
  overflow-x: auto;
}

.chart-content {
  display: flex;
  padding: 20rpx 0;
  min-width: 600rpx;
}

.chart-item {
  flex: 1;
  text-align: center;
  display: flex;
  flex-direction: column;
  height: 280rpx;
}

.chart-date {
  font-size: 20rpx;
  color: #999999;
  margin-bottom: 10rpx;
}

.chart-bars {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  gap: 10rpx;
}

.bar-group {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 30rpx;
}

.chart-bar {
  width: 12rpx;
  border-radius: 6rpx;
}

.bar-value {
  font-size: 16rpx;
  color: #999999;
  margin-top: 6rpx;
}

/* 习惯完成情况 */
.habit-status {
  margin-bottom: 30rpx;
  border-radius: 20rpx;
  background-color: #fff;
  padding: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.status-header {
  margin-bottom: 20rpx;
}

.status-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #4080FF;
  font-weight: bold;
}

.progress-bar {
  height: 12rpx;
  background-color: #F5F7FA;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress {
  height: 100%;
  background-color: #4080FF;
  border-radius: 6rpx;
  transition: width 0.3s ease;
} 