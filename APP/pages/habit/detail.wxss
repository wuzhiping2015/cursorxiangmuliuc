/* pages/habit/detail.wxss */
.container {
  padding: 20rpx;
  background: #f5f5f5;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 习惯信息样式 */
.habit-info {
  margin-bottom: 24rpx;
}

.habit-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.habit-basic {
  display: flex;
  align-items: center;
}

.habit-icon {
  font-size: 48rpx;
  margin-right: 16rpx;
}

.habit-detail {
  display: flex;
  flex-direction: column;
}

.habit-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.habit-time {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
}

.habit-actions {
  display: flex;
  gap: 16rpx;
}

.share-btn, .edit-btn {
  font-size: 24rpx;
  padding: 8rpx 24rpx;
  border-radius: 32rpx;
  background: #f0f0f0;
  color: #666;
  border: none;
  line-height: 1.5;
}

.habit-stats {
  display: flex;
  justify-content: space-around;
  padding-top: 24rpx;
  border-top: 1rpx solid #eee;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

/* 日历样式 */
.section-header {
  margin-bottom: 20rpx;
}

.title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 8rpx;
}

.calendar-item {
  aspect-ratio: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #666;
}

.calendar-item.completed {
  background: #e8f5e9;
  color: #4caf50;
}

.calendar-item.selected {
  background: #e3f2fd;
  color: #2196f3;
}

/* 打卡记录样式 */
.record-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.record-item {
  padding: 16rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
}

.record-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.record-time {
  display: flex;
  gap: 16rpx;
  color: #666;
  font-size: 24rpx;
}

.status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
}

.status.success {
  background: #e8f5e9;
  color: #4caf50;
}

.status.fail {
  background: #ffebee;
  color: #f44336;
}

.record-note {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}