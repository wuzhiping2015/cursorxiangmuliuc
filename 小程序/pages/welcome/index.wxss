/* index.wxss */
.welcome-container {
  height: 100vh;
  position: relative;
  overflow: hidden;
}

.welcome-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.bg-image {
  width: 100%;
  height: 100%;
  filter: brightness(0.7);
}

.welcome-content {
  position: relative;
  z-index: 2;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 120rpx 40rpx 80rpx;
  box-sizing: border-box;
}

.brand {
  text-align: center;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 40rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 16rpx rgba(0,0,0,0.1);
}

.app-name {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2);
}

.slogan {
  display: block;
  font-size: 28rpx;
  color: rgba(255,255,255,0.9);
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2);
}

.features {
  width: 100%;
  display: flex;
  justify-content: space-around;
  padding: 0 20rpx;
}

.feature-item {
  text-align: center;
}

.feature-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 30rpx;
  margin-bottom: 16rpx;
  background: rgba(255,255,255,0.9);
  box-shadow: 0 8rpx 16rpx rgba(0,0,0,0.1);
}

.feature-text {
  display: block;
  font-size: 24rpx;
  color: rgba(255,255,255,0.9);
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2);
}

.start-btn {
  width: 320rpx !important;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  color: var(--primary-color);
  background: rgba(255,255,255,0.95);
  font-weight: 500;
  box-shadow: 0 8rpx 16rpx rgba(0,0,0,0.1);
  border: none !important;
}

.start-btn::after {
  border: none;
} 