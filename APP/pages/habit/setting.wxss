.setting-container {
  min-height: 100vh;
  background-color: #F5F7FA;
  padding: 30rpx;
}

.form-group {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.input {
  height: 88rpx;
  background-color: #F5F7FA;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
}

.time-picker {
  width: 100%;
}

.picker-value {
  height: 88rpx;
  line-height: 88rpx;
  background-color: #F5F7FA;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
}

.days-select {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.day-item {
  width: calc(100% / 7 - 20rpx);
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #F5F7FA;
  border-radius: 12rpx;
  margin: 10rpx;
  font-size: 28rpx;
  color: #666;
}

.day-item.selected {
  background-color: #4080FF;
  color: #fff;
}

.custom-repeat {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.custom-repeat .label {
  margin-bottom: 0;
}

.tip {
  font-size: 24rpx;
  color: #999;
}

.btn-group {
  margin-top: 60rpx;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #4080FF;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  text-align: center;
} 