.container {
  min-height: 100vh;
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #F5F7FA;
}

/* 用户资料卡片 */
.user-card {
  margin-bottom: 40rpx;
  border-radius: 20rpx;
  background-color: #fff;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
  background-color: #f0f0f0;
}

.user-detail {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12rpx;
  display: block;
}

.user-desc {
  font-size: 28rpx;
  color: #999999;
  display: block;
}

/* 设置列表 */
.settings-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  display: block;
}

.settings-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-radius: 20rpx;
  background-color: #ffffff;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.setting-left {
  display: flex;
  align-items: center;
}

.setting-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  overflow: hidden;
  margin-right: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.setting-icon image {
  width: 80rpx;
  height: 80rpx;
  object-fit: cover;
}

.setting-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

.setting-right {
  display: flex;
  align-items: center;
}

.setting-value {
  font-size: 24rpx;
  color: #999999;
  margin-right: 10rpx;
}

.arrow {
  font-size: 24rpx;
  color: #CCCCCC;
}

/* 退出登录按钮 */
.logout-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  background-color: #fff;
  color: #FF5252;
  font-size: 32rpx;
  margin-top: 60rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
} 