/* 全局样式 */
page {
  background-color: #f8f9fa;
  min-height: 100vh;
  color: #2c3e50;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

/* 通用样式 */
.container {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #34495e;
  margin: 40rpx 0;
  text-align: center;
}

.text-center {
  text-align: center;
}

/* 卡片样式 */
.card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  width: 90%;
  box-sizing: border-box;
}

/* 按钮样式 */
button {
  background: #3498db;
  color: #ffffff;
  border-radius: 40rpx;
  padding: 20rpx 60rpx;
  font-size: 32rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(52, 152, 219, 0.2);
  transition: all 0.3s ease;
}

button:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 6rpx rgba(52, 152, 219, 0.2);
}