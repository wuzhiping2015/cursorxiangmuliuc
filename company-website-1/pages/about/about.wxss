.about-header {
  background-color: #fff;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

.about-title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
}

.about-intro {
  font-size: 28rpx;
  line-height: 1.8;
  text-align: center;
}

.section {
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.section-content {
  font-size: 28rpx;
  line-height: 1.6;
}