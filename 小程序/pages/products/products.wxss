.header {
  background-color: #fff;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
  text-align: center;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.header-desc {
  font-size: 28rpx;
  color: #666;
}

.product-list {
  display: flex;
  flex-direction: column;
}

.product-item {
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

.product-item image {
  width: 100%;
  height: 400rpx;
}

.product-info {
  padding: 20rpx;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.product-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.product-features {
  display: flex;
  flex-wrap: wrap;
}

.feature {
  background-color: #f0f0f0;
  padding: 10rpx 20rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
}