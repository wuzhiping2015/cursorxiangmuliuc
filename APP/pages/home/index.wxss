.container {
  min-height: 100vh;
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #F5F7FA;
}

/* 顶部用户信息 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.season-info {
  display: flex;
  align-items: center;
}

.season-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 16rpx;
}

.season-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.user-profile {
  width: 60rpx;
  height: 60rpx;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #f0f0f0;
}

/* 本周数据概览 */
.data-overview {
  margin-bottom: 30rpx;
  border-radius: 20rpx;
  overflow: hidden;
  background-color: #fff;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  padding: 24rpx;
}

.overview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.overview-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
}

.overview-more {
  display: flex;
  align-items: center;
}

.overview-more-text {
  font-size: 24rpx;
  color: #999999;
}

.overview-content {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
}

.overview-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 10rpx;
}

.item-value {
  font-size: 44rpx;
  font-weight: 600;
  color: #4080FF;
  margin-bottom: 8rpx;
}

.item-label {
  font-size: 24rpx;
  color: #999999;
}

/* 今日习惯列表 */
.habits-section {
  margin-bottom: 120rpx; /* 为底部添加按钮留出空间 */
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
}

.section-date {
  font-size: 24rpx;
  color: #999999;
}

.habits-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.habit-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-radius: 20rpx;
  background-color: #ffffff;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.habit-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.habit-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  background-color: #4080FF;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
}

.habit-icon {
  width: 48rpx;
  height: 48rpx;
}

.habit-content {
  display: flex;
  flex-direction: column;
}

.habit-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 6rpx;
}

.habit-time {
  font-size: 24rpx;
  color: #999999;
}

.habit-action {
  padding: 0 10rpx;
}

.checkbox {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  border: 2rpx solid #dcdcdc;
  display: flex;
  justify-content: center;
  align-items: center;
}

.checkbox-completed {
  background-color: #4080FF;
  border-color: #4080FF;
}

.check-icon {
  font-size: 24rpx;
}

/* 添加习惯按钮 */
.add-habit-btn {
  position: fixed;
  right: 40rpx;
  bottom: 80rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #4080FF;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 6rpx 16rpx rgba(64, 128, 255, 0.4);
  z-index: 10;
} 